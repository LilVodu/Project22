<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionVec"
    android:background="#47A891"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="x1"
            android:id="@+id/point_x1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="y1"
            android:id="@+id/point_y1"/>
        <EditText
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:hint="x2"
            android:id="@+id/point_x2"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="y2"
            android:id="@+id/point_y2"/>


    </LinearLayout>

    <Button
        android:id="@+id/vectorProiz"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/green_200"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="скалярное произведение"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:backgroundTint="@color/green_200"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_200"
            android:textSize="25dp"
            android:id="@+id/vectorPlus"
            android:text="+"/>
        <Button
            android:layout_width="wrap_content"
            android:backgroundTint="@color/green_200"
            android:layout_height="wrap_content"
            android:id="@+id/vectorMinus"
            android:textSize="25dp"
            android:text="-"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ответ"/>


</LinearLayout>